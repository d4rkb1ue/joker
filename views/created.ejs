<div id="profile-panel" class="profile-panel col-xs-12 col-md-10 col-lg-10 col-sm-10">

    <h2 class="profile-title">创建的项目</h2>
    <div class="table-responsive">
        <table class="table table-striped table hover">
            <tr>
                <th>
                    项目
                </th>
                <th>
                    类别
                </th>
                <th>
                    筹款情况
                </th>
                <th>
                    状态
                </th>
                <th style="width:100px">
                    最近更新
                </th>
                <th>
                    浏览量/评论/关注
                </th>
                <th>
                    操作
                </th>
            </tr>
            <!-- header end -->
            <% projects.forEach(function(project,index){ %>
                <tr>
                    <td>
                        <a href="/project-funding/<%= project._id %>">
                    <img src="/uploads/<%= project.feature_image %>"  alt="<%= project.feature_img %>">
                    <br>
                    <b><%= project.title %></b>
                  </a>
                    </td>
                    <td>
                        <%= project.category || "" %>
                    </td>
                    <td>
                        ¥<%= project.current_amount %>/¥<%= project.funding_goal %>
                                <br/>还有
                                <%= project.print_to_go %>

                    </td>
                    <td>
                        <%- project.is_verified? "<span class=\"label label-success\">上线</span>" : "<span class=\"label label-warning\">审核中</span>"%>
                            <%- project.is_good? "<span class=\"label label-primary\">精选</span>" : "" %>
                                <%- project.is_deleted? "<span class=\"label label-danger\">废弃</span>" : "" %>
                    </td>

                    <td>
                        <%= new Date(project.last_updated_at).toLocaleString()%><br/>
                    </td>
                    <td>
                         <span class="glyphicon glyphicon-eye-open" aria-hidden="true"> </span> <%= project.pv %>
                         <span class="glyphicon glyphicon-comment" aria-hidden="true"> </span> <%= project.comments_count %>
                         <span class="glyphicon glyphicon-heart" aria-hidden="true"> </span> <%= project.watcher_count || 0 %> 
                    </td>
                    <td>
                        <a href="/project-panel?proj_id=<%= project._id %>#orders">订单 <%= project.backers_count %> <span class="glyphicon glyphicon-flag" aria-hidden="true"></span></a>
                        <br/>
                        <a href="/project-update">更新</a>
                    </td>
                </tr>
                <% }) %>
        </table>

    </div>


</div>